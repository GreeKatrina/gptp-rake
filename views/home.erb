<!-- Volunteer Sign In -->
<div class="row">
  <form method="post" action="/volunteer-sign-in">
    <fieldset>
      <legend> Volunteer Sign In</legend>

      <div class="row">
        <div class="large-8 columns">
          <label>Email</label>
          <input type="text" name="email" placeholder="Email">
        </div>
      </div>
      <div class="row">
        <div class="large-8 columns">
          <label>Password</label>
          <input type="text" name="password" placeholder="Password">
        </div>
      </div>
      <input class="button" type="submit" value="Sign In">
    </fieldset>
    <% if session[:error] %>
    <p><%= session[:error] %></p>
    <%= session[:error] = nil %>
  <% end %>
  </form>
</div>
