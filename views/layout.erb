<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>GPTP</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="/fonts/font-awesome.scss">
        <style>
          /*  *{
                -webkit-box-sizing: border-box;
                border: 1px solid red;
            }*/
        </style>
    </head>
    <body>
      <%= yield %>
      <script type="text/javascript" src="/js/jquery.min.js"></script>
      <script type="text/javascript" src="/js/foundation.min.js"></script>
      <script type="text/javascript" src="/js/foundation.topbar.js"></script>
      <script type="text/javascript" src="/js/foundation.dropdown.js"></script>
      <script type="text/javascript">
        $(document).foundation();
        // function to scroll to about us section
        $.fn.scrollView = function () {
          return this.each(function(){
            $('thml, body').animate({
              scrollTop: $(this).offset().top
            }, 1000);
          });
        }
        // on click event for about us/contact menu
        $('.scroll').click(function(e){
          e.preventDefault();
          $('#about').scrollView();
        })
        // Sign in/Sign Up click events
        $('#vol_in').click(function(e){
          e.preventDefault
          $("#vol_div").css("display", "none");
          $("#vol_in_form").removeClass("hidden");
        })
        $('#vol_up').click(function(e){
          e.preventDefault
          $("#vol_div").css("display", "none");
          $("#vol_up_form").removeClass("hidden");
        })
        $('#org_in').click(function(e){
          e.preventDefault
          $("#org_div").css("display", "none");
          $("#org_in_form").removeClass("hidden");
        })
        $('#org_up').click(function(e){
          e.preventDefault
          $("#org_div").css("display", "none");
          $("#org_up_form").removeClass("hidden");
        })
      </script>
    </body>
</html>
